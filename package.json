{
  "name": "@thednp/tween",
  "version": "0.0.1",
  "description": "âœ¨ A Typescript sourced tweening engine with Tween and Timeline",
  "homepage": "https://github.com/thednp/tween",
  "author": "thednp",
  "license": "MIT",
  "type": "module",
  "browser": "./dist/index.iife.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "wiki",
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./react": {
      "require": "./dist/react.cjs",
      "import": "./dist/react.mjs"
    },
    "./solid": {
      "require": "./dist/solid.cjs",
      "import": "./dist/solid.mjs"
    },
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/thednp/tween/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "pre-test": "pnpm clean-coverage",
    "clean-coverage": "rm -rf coverage .nyc_output",
    "test": "pnpm pre-test && vitest",
    "test-ui": "pnpm pre-test && vitest --ui",
    "badges": "npx -p dependency-version-badge update-badge typescript vitest vite",
    "format": "deno fmt src",
    "lint": "pnpm lint:ts && pnpm lint:types",
    "lint:ts": "deno lint src",
    "lint:types": "tsc --noEmit",
    "fix:ts": "deno lint src --fix",
    "build_": "vite build",
    "build": "tsdown && vite build",
    "prepublishOnly": "pnpm update --latest && pnpm format && pnpm lint && pnpm build && pnpm badges"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/tween.git"
  },
  "keywords": [
    "tween",
    "timeline",
    "cubic-bezier",
    "cubic-tween",
    "easing",
    "ease",
    "easing functions",
    "animation engine",
    "animation",
    "animations",
    "typescript"
  ],
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.6",
    "@vitest/coverage-istanbul": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "happy-dom": "^20.1.0",
    "tsdown": "0.20.0-beta.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-strip-comments": "^0.0.6",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8.6.0"
  },
  "dependencies": {
    "@types/react": "^19.2.8",
    "react": "^19.2.3",
    "solid-js": "^1.9.10"
  },
  "types": "./dist/index.d.cts"
}
